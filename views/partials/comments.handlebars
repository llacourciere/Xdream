<!--Comments partial-->
{{#each this}}
<div class="card" id="comment-card" data-aos="fade-up" data-aos-duration="1500" style="width: 50rem;">
  <div class="card-body">
    <p class="card-text">
    <div class="comments">
      <section class="comment">
        <div class="meta">
          {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
          {{comment_text}}
        </div>
      </section>
    </div>
    </p>
  </div>
</div>
{{/each}}