<article class="dream">
    <div class="title">
        <span>{{title}}</span>
    </div>
    <div class="description">
        <p>{{description}}</p>
    </div>
    <div class="meta">
        Dream posted by {{user.username}} on {{format_date created_at}}
        <p>{{comments.length}} comment(s)</p>
        {{#each tags}}
        {{/each}}
    </div>
</article>