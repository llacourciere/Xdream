<link rel="stylesheet" href="/css/dashboard.css">

<section class="d-flex justify-content-center">
    <form class="new-dream-form col-10">
        <h2> Record Your Dream</h2>
        <div class="row mb-1 mx-1">
            <label for="dream-title"><strong>Title</strong></label>
            <input type="text" class="col-8 col-sm-4" name="dream-title" id="dream-title" />
        </div>
        <div class="row mb-2">
            <textarea name="dream-body" placeholder="Describe your dream here"></textarea>
        </div>

        <label class="container" for="public-dream">Would you like this dream to be public?
            <input type="checkbox" id="public-dream">
            <span class="checkmark"></span>
        </label>

        <div class="dropdown my-1">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                aria-expanded="false">
                Add a tag
            </button>
           
            <div class="dropdown-menu">
                <a id="nightmare" class="dropdown-item" href="#">Nightmare</a>
                <a id="lucid" class="dropdown-item" href="#">Lucid</a>
                <a id="realistic" class="dropdown-item" href="#">Realistic</a>
                <a id="reoccuring" class="dropdown-item" href="#">Reoccurring</a>
                <a id="prophetic" class="dropdown-item" href="#">Prophetic</a>
                <a id="daydream" class="dropdown-item" href="#">Daydream</a>
                <a id="erotic" class="dropdown-item" href="#">Erotic</a>
            </div>
       
            <button type="submit" class="btn btn-dark">Create</button>
        </div>
    </form>
</section>

{{#if dreams.length}}

<section class="row justify-content-around">
    <div class="col-12 col-sm-6">
        <h2>Your Public Dreams</h2>
        {{#each dreams as |dream|}}
        {{#if public}}
        <ol>
            <li class="card">
                {{> dream-info dream}}
                <a href="/dashboard/edit/{{dream.id}}" class="edit-link">Edit Dream</a>
            </li>
        </ol>
        {{/if}}
        {{/each}}
    </div>
    <div class="col-12 col-sm-6">
        <h2>Your Private Dreams</h2>
        {{#each dreams as |dream|}}
        {{#unless public}}
        <ol>
            <li class="card">
                {{> dream-info dream}}
                <a href="/dashboard/edit/{{dream.id}}" class="edit-link">Edit Dream</a>
            </li>
        </ol>
        {{/unless}}
        {{/each}}
    </div>
</section>
{{/if}}