<link rel="stylesheet" href="/css/dashboard.css">

<section class="d-flex justify-content-center">
    <form class="new-dream-form pl-0 col-10">
        <div class="mx-1 mt-2">
        <h2 class="record-title"> Record Your Dream</h2>
        </div>

        <div class="form-group">
            <div class="form-group">
                <div class="row mb-1 mx-1">
                    <input type="text" class="col-8 col-sm-4 form-control" name="dream-title" id="dream-title" placeholder="Title"/>
                </div>
            </div>
            <div class="form-group">
                <div class="row mb-2 mx-1">
                    <textarea name="dream-body" class="form-control" placeholder="Describe your dream here"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="container record-title" for="public-dream">Would you like this dream to be public?
                    <input type="checkbox" id="public-dream">
                    <span class="checkmark form-control"></span>
                </label>
            </div>
                <div class="dropdown my-1">
                    <button id="drpDwnBtn" class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown"
                        aria-expanded="false">
                        Add a tag
                    </button>
                    <div class="dropdown-menu">
                        <a id="nightmare" class="dropdown-item" href="#">Nightmare</a>
                        <a id="lucid" class="dropdown-item" href="#">Lucid</a>
                        <a id="realistic" class="dropdown-item" href="#">Realistic</a>
                        <a id="recurring" class="dropdown-item" href="#">Recurring</a>
                        <a id="prophetic" class="dropdown-item" href="#">Prophetic</a>
                        <a id="daydream" class="dropdown-item" href="#">Daydream</a>
                        <a id="erotic" class="dropdown-item" href="#">Erotic</a>
                    </div>
                <button type="submit" class="btn btn-dark">Create</button>
            </div>
        </div>
    </form>
</section>

{{#if dreams.length}}

<section class="row justify-content-around">
    <div class="col-11 col-sm-5">
        <h2 class="record-title">Published Dreams</h2>
        {{#each dreams as |dream|}}
        {{#if public}}
        <ol>
            <li class="card">
                {{> dream-info dream}}
                <a href="/dashboard/edit/{{dream.id}}" class="edit-link py-2">Edit Dream</a>
            </li>
        </ol>
        {{/if}}
        {{/each}}
    </div>
    <div class="col-11 col-sm-5">
        <h2 class="record-title">Private Dreams</h2>
        {{#each dreams as |dream|}}
        {{#unless public}}
        <ol>
            <li class="card">
                {{> dream-info dream}}
                <a href="/dashboard/edit/{{dream.id}}" class="edit-link py-2">Edit Dream</a>
            </li>
        </ol>
        {{/unless}}
        {{/each}}
    </div>
</section>
{{/if}}

