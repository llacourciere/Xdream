<!--links to the AOS library, and stylesheets-->
<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/css/dream-forum.css" />
<div class="container col-10 mt-4">
<!--The dream-info partial will render here-->
{{> dream-info dream }}
</div>

<!--Form for making comments on dreams, and it will only render if user is logged in-->
{{#if loggedIn}}
<form class="comment-form">
    <div class="row justify-content-center">
        <textarea id="textarea" class="col-10 col-sm-8 mt-2 form-control" name="comment-body" placeholder="Write comments here"></textarea>
    </div>
    <div class="row justify-content-center">
     <button class="btn btn-secondary mt-2" type="submit">add comment</button>
     </div>
</form>

<!--Adds the comments partial to the page-->
{{/if}}
{{> comments dream.comments}}

<!--Links to the animate on scroll library and the function call-->
  {{#if loggedIn}}
<script src="https://unpkg.com/aos@next/dist/aos.js"></script>
<script>
  AOS.init();
</script>
<script src="/js/comment.js"></script>
{{/if}}